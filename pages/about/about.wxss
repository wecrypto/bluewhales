/* pages/about/about.wxss */
page{
  background-color:#f3f4f6;
}
.my-container{
  width: 100%;
  height: 100%;
  display: flex;
  align-content: center;
  flex-direction: column;}
#logo{
  margin: 30rpx auto;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
#version{
  text-align: center;
  color:#9CA1A3;
  font-family: Sans-serif;
}
.t-buttons{
  margin: 40rpx 0;
  background-color: #fff;
}
.t-item{
  padding: 34rpx 20rpx;
  border-top: 1px solid #f4f4f4;
  border-bottom: 1px solid #f4f4f4;
  font-family: Monospace;
  position: relative;
}
.t-item::after{
  content: ">";
  position: absolute;
  right: 30rpx;
  color:rgb(192, 191, 191); 
  font-weight: bold;
}
.text{
  padding: 0;
  margin: 0;
  border: 0;
  box-sizing: content-box;
  line-height: inherit;
  text-align: left;
  font-size:inherit;
  width: 100%;
  height: 100%;
  display: inline-block;
  background-color: #fff;
}
.text::after{
  content:"";
  border: none;
}
.text .button-hover{
  color: #000;
}